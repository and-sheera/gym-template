mixin widget-nav(mods)
  -
    const baseName = 'widget-nav'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .widget-nav(class=allMods)&attributes(attributes)
    button.widget-nav__button
    .widget-nav__body
      .widget-nav__text Получить бесплатно:
      .widget-nav__list
        a.widget-nav__item(href='#first-training')
          .widget-nav__icon: img(src='data:image/png;base64,' alt='')
          .widget-nav__text Первая тренировка
        a.widget-nav__item(href='#' onclick=`window.openPopup('consultation'); return false;`)
          .widget-nav__icon: img(src='data:image/png;base64,' alt='')
          .widget-nav__text Консультация
        a.widget-nav__item(href='#' onclick=`window.openPopup('download-schedule'); return false;`)
          .widget-nav__icon: img(src='data:image/png;base64,' alt='')
          .widget-nav__text Скачать распиание тренировок
    block
